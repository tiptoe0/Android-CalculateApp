<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp"
            android:id="@+id/sentence"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="= "
            android:textSize="30dp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:id="@+id/answer"/>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:hint="식을 입력하세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력"
            android:id="@+id/submit"/>
    </LinearLayout>

    <Button
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_file"
        android:text="파일 불러오기"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="5"
        android:rowCount="5">

        <Button
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:text="2" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:text="3" />
        <Button
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:text="6" />
        <Button
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:text="9" />
        <Button
            android:id="@+id/btn0"
            android:layout_width="70dp"
            android:text="0" />

        <Button
            android:id="@+id/btn_left"
            android:layout_width="70dp"
            android:text="(" />
        <Button
            android:id="@+id/btn_right"
            android:layout_width="70dp"
            android:text=")" />
        <Button
            android:id="@+id/btn_dot"
            android:layout_width="70dp"
            android:text="." />
        <Button
            android:id="@+id/btn_ca"
            android:layout_width="70dp"
            android:backgroundTint="#00FFFF"
            android:text="CA" />
        <Button
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:backgroundTint="#00FFFF"
            android:text="←" />

        <Button
            android:id="@+id/add"
            android:layout_width="70dp"
            android:text="+" />
        <Button
            android:id="@+id/sub"
            android:layout_width="70dp"
            android:text="-" />
        <Button
            android:id="@+id/mul"
            android:layout_width="70dp"
            android:text="*" />
        <Button
            android:id="@+id/div"
            android:layout_width="70dp"
            android:text="/" />
        <Button
            android:id="@+id/mod"
            android:layout_width="70dp"
            android:text="MOD" />

        <Button
            android:id="@+id/and"
            android:layout_width="70dp"
            android:text="AND" />
        <Button
            android:id="@+id/or"
            android:layout_width="70dp"
            android:text="OR" />
        <Button
            android:id="@+id/not"
            android:layout_width="70dp"
            android:text="NOT" />
        <Button
            android:id="@+id/xor"
            android:layout_width="70dp"
            android:text="XOR" />
        <Button
            android:id="@+id/btn_enter"
            android:backgroundTint="#00FFFF"
            android:layout_width="70dp"
            android:text="\\n" />

    </GridLayout>
<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:id="@+id/history"
        android:backgroundTint="#00FF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/quiz"
        android:backgroundTint="#00FF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz"/>
</LinearLayout>
</LinearLayout>